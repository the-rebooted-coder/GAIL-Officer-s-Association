<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity_indian_news_landing"
    tools:context=".IndianNewsLanding">


    <ScrollView
        android:layout_width="305dp"
        android:layout_height="371dp"
        android:elevation="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.44">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/bbc"
                android:layout_width="308dp"
                android:layout_height="170dp"
                android:background="@drawable/bbc"
                android:elevation="20dp"
                android:fontFamily="@font/productsans"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.78" />

            <Button
                android:id="@+id/ndtv"
                android:layout_width="308dp"
                android:layout_height="170dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/ndtv"
                android:elevation="20dp"
                android:fontFamily="@font/productsans"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.19999999" />

            <Button
                android:id="@+id/google"
                android:layout_width="308dp"
                android:layout_height="170dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/google"
                android:elevation="20dp"
                android:fontFamily="@font/productsans"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.39" />

            <Button
                android:id="@+id/aajtak"
                android:layout_width="308dp"
                android:layout_height="170dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/aajtk"
                android:elevation="20dp"
                android:fontFamily="@font/productsans"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.58000004" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/productsansbold"
        android:text="@string/indian_news_bulletin"
        android:textColor="@android:color/black"
        android:textSize="29sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.06999999" />


</androidx.constraintlayout.widget.ConstraintLayout>